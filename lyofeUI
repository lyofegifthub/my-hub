
local Players = game:GetService("Players")
local localPlayer = Players.LocalPlayer
local PlayerGui = localPlayer:WaitForChild("PlayerGui")
local MenuGUI = Luxt


-------------------------------------------------------------------

-------------------------------------------------------------------

-- Buat container untuk menu script tambahan Anda
local ScriptMenu = Instance.new("Frame")
ScriptMenu.Name = "ScriptMenu"
ScriptMenu.Size = UDim2.new(1, 0, 1, 0)
ScriptMenu.Position = UDim2.new(0, 0, 0, 0)
ScriptMenu.BackgroundTransparency = 1  
ScriptMenu.Parent = MenuGUI.Menu.Main  

-- Buat judul untuk menu tambahan dengan styling 
local Title = Instance.new("TextLabel")
Title.Name = "ScriptMenuTitle"
Title.Size = UDim2.new(1, 0, 0, 50)
Title.Position = UDim2.new(0, 0, 0, 0)
Title.BackgroundTransparency = 1
-- heading UI 
Title.Font = MenuGUI.Menu.Main.Heading.Font
Title.TextSize = MenuGUI.Menu.Main.Heading.TextSize
Title.TextColor3 = MenuGUI.Menu.Main.Heading.TextColor3
Title.Text = "Script Teleport Menu"
Title.Parent = ScriptMenu

-- Fungsi untuk membuat tombol dengan tampilan identik
local function createButton(name, text, position)
    local btn = Instance.new("TextButton")
    btn.Name = name
    btn.Size = UDim2.new(0, 200, 0, 50)
    btn.Position = position
    btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)  
    btn.BorderSizePixel = 0
    btn.Font = Enum.Font.GothamSemibold  
    btn.Text = text
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.TextSize = 20
    btn.Parent = ScriptMenu
    return btn
end

-- Tambahkan tombol "Teleport Buildings" dan "Teleport Wire"
local TeleportBuildingsButton = createButton("TeleportBuildingsButton", "Teleport Buildings", UDim2.new(0.5, -100, 0, 60))
local TeleportWireButton = createButton("TeleportWireButton", "Teleport Wire", UDim2.new(0.5, -100, 0, 120))

-- Event untuk memanggil fungsi ketika tombol ditekan
TeleportBuildingsButton.MouseButton1Click:Connect(function()
    print("Teleport Buildings button pressed")
    if typeof(StartTeleportOptimized) == "function" then
        StartTeleportOptimized()
    else
        warn("Fungsi StartTeleportOptimized tidak ditemukan!")
    end
end)

TeleportWireButton.MouseButton1Click:Connect(function()
    print("Teleport Wire button pressed")
    if typeof(StartWireTeleportOptimized) == "function" then
        StartWireTeleportOptimized()
    else
        warn("Fungsi StartWireTeleportOptimized tidak ditemukan!")
    end
end)

print("Integrated UI (identical) loaded.")
